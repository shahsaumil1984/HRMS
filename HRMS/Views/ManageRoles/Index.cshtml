@using HRMS.Controllers
@model EmployeeRoles
@{
    ViewBag.Title = "Manage Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeaderIncludes
{
    <script type="text/javascript">

    function addRoles() {
        var arrRoles = new Array();
        arrRoles = $('#lstRoles').val();
        if (arrRoles != null && arrRoles.length > 0) {
            for (var i = 0; i < arrRoles.length; i++) {
                if ($("#lstAssignedRole option[value=" + arrRoles[i] + "]").length == 0) {
                    $('#lstAssignedRole').append('<option value=' + arrRoles[i] + '>' + arrRoles[i] + '</option>');
                }
            }
        }
    }

    function removeRoles() {
        $("#lstAssignedRole option:selected").remove();
    }
    $(document).ready(function () {

        $("#lstRoles").val([]);

        $("#btnSave").on("click", function () {
            var assignedRoles = $('#lstAssignedRole option');
            var employeeID = $('#employeeID').val();
            if (assignedRoles != null && assignedRoles.length > 0 && employeeID!= null) {
                var strRoles = "";
                for (var i = 0; i < assignedRoles.length; i++) {
                    if (i == assignedRoles.length - 1) {
                        strRoles = strRoles + assignedRoles[i].text ;
                    }
                    else {
                        strRoles = strRoles + assignedRoles[i].text + ',';
                    }
                }
                $.ajax({
                    url: '/ManageRoles/SaveRoles/?strRoles=' + strRoles + "&employeeID=" + employeeID,
                    type: "POST",
                    beforeSend: function () {
                    },
                    success: function (data, status, jqXHR) {
                        debugger;
                        alert(data);
                    },
                    error: function (jqXHR, status, err) {

                    }
                });
            }
        });
    });

    </script>
}
<h2>Manage Roles</h2>
<span>Select roles for user.</span>
<div class="row">
    <div class="col-md-4">@Html.ListBoxFor(m => m.lstRoles, new MultiSelectList(Model.lstRoles, "", ""), new { Multiple = "multiple", @style = "min-width:40%;" })</div>
    <div class="col-md-4">
        <button type="button" class="btn" onclick="addRoles()">Add</button>
        <button type="button" class="btn" onclick="removeRoles()">Remove</button>
    </div>
    <div class="col-md-4" >@Html.ListBox("lstAssignedRole", new List<SelectListItem>(), new { @style = "min-width:40%;" })</div>
</div>
<div class="row">
    <button type="button" id="btnSave" class="btn">Save</button>
</div>
<input id="employeeID" type="hidden" value="@ViewBag.EmployeeID" />

 


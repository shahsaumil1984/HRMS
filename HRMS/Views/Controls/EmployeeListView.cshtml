
@model ViewModel.MasterViewModel
@using Model

<div class="listView" id="employeeListView">
    <div class="middlewrap">
               
        <h3 class="title"> <span>Employees</span> </h3>

        

        <div class="table-responsive">
            <table class="table table-condensed table-hover"
                   id="employeeGrid"
                   data-ui-binding="true"
                   data-entity-key="EmployeeID"
                   data-service-object="employeeService"
                   data-default-orderby="FirstName"
                   cellspacing="0" cellpadding="0" border="0">
                <thead class="tblaction">
                    <tr>
                        <td colspan="6">
                            <div class="form-group m-0">
                                <input type="text"
                                       data-search-fields="HRMS"
                                       data-search-list="employeeGrid"
                                       data-default-focus="true" />
                                &nbsp;
                                <button type="button" ng-click="ub.NewForm('employeeDetailsForm', true, 'EmployeeNewCallback')">Add New</button>                                
                            </div>
                        </td>
                    </tr>
                </thead>

                <thead>                   
                    <tr>
                        <th>Employee Name</th>
                        <th class="text-left">Employee Code</th>
                        <th class="text-center">Role</th>
                        <th class="text-center">DOJ</th>
                        <th class="text-left address">Address</th>
                        <th class="text-left">Phone</th>
                    </tr>
                </thead>
                <tbody ng-repeat="r in rows">
                    <tr alt=$index%2 ng-click="ub.LoadForm('employeeDetailsForm',  r.EmployeeID , true, null)">
                        <td>
                            <div class="media">
                                <div class="media-left">
                                    <a href="#">
                                        <img class="media-object" src="images/noimg.jpg" alt="personimg">
                                    </a>
                                </div>
                                <div class="media-body">
                                    <p class="ename">{{r.FullName}}</p>
                                    <a class="eemail" href="mailto:richard@alept.com">richard@alept.com</a>
                                </div>
                            </div>
                        </td>
                        <td class="text-left">{{r.EmployeeID}}</td>
                        <td class="text-center">Team Lead</td>
                        <td class="text-center">{{r.DateOfBirth}}</td>
                        <td class="text-left address">
                            {{r.PermanentAddressLine1}}<br>
                            {{r.PermanentAddressLine2}}<br>
                            {{r.PermanentAddressLine3}} {{r.PermanentAddressState}},{{r.PermanentAddressZip}}
                        </td>
                        <td class="text-left">+91 123-456-7890</td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>



@model ViewModel.MasterViewModel
@using Model

<div id="documentTypeDetailsWindow" class="detailsWindow">

    <form id="documentTypeDetailsForm"
          name="documentTypeDetailsForm"
          data-ui-binding="true"
          data-service-object="documentTypeService"
          data-associated-list="documentTypeGrid"
          method="get" action="" class="form-horizontal" role="form">

        <div class="modal-body container-fluid">

            <div id="documentTypeErrorDisplay" class="documentTypeErrorDisplay" data-error-display="true"></div>

            <fieldset>
                <legend>General Information</legend>



                <div class="form-group">

                    <input type="hidden" ng-model="model.DocumentTypeID" />

                </div>


                <div class="form-group">

                    <label class="col-sm-2">Description</label>                   
                    <div class="col-sm-4">
                        <input type="text" name="em_Description" id="em_Description" ng-model="model.Description" class="required form-control" maxlength="500" />
                    </div>                
                </div>
            </fieldset>
        </div>

        <div class="modal-footer">
            <div class="editor-label">
                <button class="btn btn-primary btn-sm">Save</button>
                <button type="button" class="btn btn-primary btn-sm" ng-click="fb.HideForm(true)">Cancel</button>
            </div>
        </div>
    </form>
</div>


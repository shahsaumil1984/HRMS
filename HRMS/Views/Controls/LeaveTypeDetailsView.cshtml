
		@model ViewModel.MasterViewModel
		@using Model

		<div id="leaveTypeDetailsWindow" class="detailsWindow" >

		<form id="leaveTypeDetailsForm"
		name="leaveTypeDetailsForm"
		data-ui-binding="true"
		data-service-object="leaveTypeService"
		data-associated-list="leaveTypeGrid"
		method="get" action="" class="form-horizontal" role="form">

		<div class="modal-body container-fluid">

		<div id="leaveTypeErrorDisplay" class="leaveTypeErrorDisplay" data-error-display="true"></div>

		<fieldset>
		<legend>General Information</legend>

		

			<div class="form-group">
			
							<input type="hidden" ng-model="model.ID" />
						
			</div>
		

			<div class="form-group">
			
							<label  class="col-sm-2 control-label">Name</label>
							<div class="col-sm-10">
							</div>
							<input type="text" name="le_Name" id="le_Name" ng-model="model.Name" class="required form-control" maxlength="50"/>
						
			</div>
		

			<div class="form-group">
			
							<label  class="col-sm-2 control-label">Symbol</label>
							<div class="col-sm-10">
							</div>
							<input type="text" name="le_Symbol" id="le_Symbol" ng-model="model.Symbol" class="form-control" maxlength="5"/>
						
			</div>
		

		</fieldset>
		</div>

		<div class="modal-footer">
		<div class="editor-label">
		<button class="btn btn-primary btn-sm">Save</button>
		<button type="button" class="btn btn-primary btn-sm" ng-click="fb.HideForm(true)">Cancel</button>
		</div>
		</div>
		</form>
		</div>

	
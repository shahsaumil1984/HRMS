
@model ViewModel.MasterViewModel
@using Model

<div id="documentTypeListView" class="listView">
    <style>
        .actioncell {
            width: 20%;
        }

        .normalcell {
            width: 60%;
        }
    </style>

    @*<form class="form-inline">

        </form>*@
    @*<div class="form-group mt-md"></div>*@
    <table id="documentTypeGrid"
           data-ui-binding="true"
           data-entity-key="DocumentTypeID"
           data-service-object="documentTypeService"
           data-default-orderby="Description"
           class="table table-condensed table-hover"
           data-page-size="10">
        <thead class="tblaction">
            <tr>
                <td colspan="3">
                    <table class="col-md-5">
                        <tr>
                            <td class="col-md-4">
                                <input type="text" class="form-control"
                                       data-search-fields="Description"
                                       data-search-list="documentTypeGrid"
                                       data-default-focus="true" />
                            </td>
                            <td class="col-md-4"><button type="button" class="btn btn-primary" ng-click="ub.NewForm('documentTypeDetailsForm', true, null)">New Document Type</button></td>
                        </tr>
                    </table>                   
                </td>
            </tr>
        </thead>
        <tr>
            @*<th><a href="#" data-sort-field="DocumentTypeID">Document Type ID</a></th>*@
            <th class="normalcell"><a href="#" data-sort-field="Description">Description</a></th>
            <th class="actioncell">Edit</th>
            <th class="actioncell">Delete</th>
        </tr>
        <tbody ng-repeat="r in rows">
            <tr alt=$index%2>
                @*<td class="col-md-1"> <span>{{r.DocumentTypeID}}</span></td>*@
                <td class="col-md-1"> <span>{{r.Description}}</span></td>
                <td class="col-md-1"><img src="~/Content/images/edit.png" alt="Edit" title="Edit" width="20" ng-click="ub.LoadForm('documentTypeDetailsForm',  r.DocumentTypeID , true, null)" /></td>
                <td class="col-md-1"><img src="~/Content/images/delete.png" alt="Delete" title="Delete" width="20" ng-click="lb.Delete(r.DocumentTypeID, 'Are you sure you want to delete this Document Type?' , ub.documentTypeDeleteCallback)" /></td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" align="center">
                    <div id="documentTypePagination">
                        <span>{{pageText}}</span>&nbsp;&nbsp;
                        <button type="button" class="btn btn-primary btn-sm" ng-click="lb.PageFirst()" ng-disabled="TotalRows <= pageSize || pageIndex==0"><span><<</span></button>
                        <button type="button" class="btn btn-primary btn-sm" ng-click="lb.PagePrevious()" ng-disabled="TotalRows <= pageSize || pageIndex==0"><span><</span></button>
                        <button type="button" class="btn btn-primary btn-sm" ng-click="lb.PageNext()" ng-disabled="TotalRows <= pageSize || totalPages==pageIndex+1"><span>></span></button>
                        <button type="button" class="btn btn-primary btn-sm" ng-click="lb.PageLast()" ng-disabled="TotalRows <= pageSize || totalPages==pageIndex+1"><span>>></span></button>
                    </div>
                </td>
            </tr>
        </tfoot>
    </table>
</div>

@model ViewModel.MasterViewModel
@using Model

<div class="listView" id="itDeclarationListView">
    <div class="middlewrap">



        <div class="table-responsive tbl-scroll">
            <h3 class="title"> <span>IT Declaration for @ViewBag.Name</span> </h3>
            <input type="hidden" id="hdnEmployeeID" value="@ViewBag.EmployeeID" />
            <input type="hidden" id="hdnPan" value="@ViewBag.Pan" />

            <input type="hidden" id="hdnAddressLine1" value="@ViewBag.AddressLine1" />
            <input type="hidden" id="hdnAddressLine2" value="@ViewBag.AddressLine2" />
            <input type="hidden" id="hdnAddressLine3" value="@ViewBag.AddressLine3" />
            <input type="hidden" id="hdnAddressCity" value="@ViewBag.AddressCity" />
            <input type="hidden" id="hdnAddressState" value="@ViewBag.AddressState" />
            <input type="hidden" id="hdnAddressZip" value="@ViewBag.AddressZip" />
            <input type="hidden" id="hdnAddressCountry" value="@ViewBag.AddressCountry" />
            <table class="table table-condensed table-hover"
                   id="itDeclarationGrid"
                   data-ui-binding="true"
                   data-entity-key="ItDeclarationID"
                   data-service-object="itDeclarationService"
                   data-default-orderby="ItDeclarationYear"
                   cellspacing="0" cellpadding="0" border="0"
                   data-page-size="10">
                <thead class="tblaction">
                    <tr>
                        <td colspan="6">
                            <table class="col-md-5">
                                <tr>
                                    <td class="col-md-3">
                                        <select id="yearFilter" data-filter-list="itDeclarationGrid" data-filter-field="ItDeclarationYear" class="form-control">
                                            <option value="">Select Financial Year</option>
                                            @foreach (var year in Model.Years)
                                            {
                                                <option value="@year">@year - @(year + 1)</option>
                                            }
                                        </select>
                                    </td>
                                    <td class="col-md-2">
                                        <button type="button" ng-click="ub.NewItDeclarationDetailForm('itDeclarationDetailsForm',true,'')" class="btn btn-primary">Add New</button>
                                        <button type="button" id="btnBack" class="btn btn-primary" onclick="@(" window.location.href='" + @Url.Action("Index", "Employee") + "' ");">Back</button>
                                    </td>
                                </tr>
                            </table>
                            <div class="form-group m-0">
                                <select id="statusFilter" data-filter-list="itDeclarationGrid" data-filter-field="EmployeeID" style="display:none">
                                    <option value="@ViewBag.EmployeeID">@ViewBag.EmployeeID</option>
                                </select>
                            </div>
                        </td>
                    </tr>
                </thead>

                <thead>
                    <tr>

                        <th class="text-left">Year</th>
                        <th class="text-left">Name</th>
                        <th class="text-left">PAN Number</th>
                        <th class="text-left">Date</th>
                        <th class="text-left">Edit</th>
                        <th class="text-left">Delete</th>
                    </tr>
                </thead>
                <tbody>

                    <tr alt=$index%2 ng-repeat="r in rows">

                        <td class="text-left">{{r.ItDeclarationYear}}</td>
                        <td class="text-left">@ViewBag.Name</td>
                        <td class="text-left">{{r.PanNo}}</td>
                        <td class="text-left">{{r.Date  | date:'dd/MM/yyyy'}}</td>
                        <td class="text-left">
                            <a href='javascript:;' ng-click="ub.LoadForm('itDeclarationDetailsForm',  r.ItDeclarationID , true, null)">
                                <img src="~/Content/images/edit.png" alt="Edit" title="Edit" width="20" />
                            </a>
                        </td>
                        <td class="text-left">
                            <a href='javascript:;' ng-click="lb.Delete(r.ItDeclarationID, 'Are you sure you want to delete this IT Declaration?' , ub.itDeclarationDeleteCallback)">
                                <img src="~/Content/images/delete.png" alt="Delete" title="Delete" width="20" />
                            </a>
                        </td>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="6" align="center">
                            <div id="monthPagination">
                                <span>{{pageText}}</span>&nbsp;&nbsp;
                                <button type="button" class="btn btn-primary btn-sm" ng-click="lb.PageFirst()" ng-disabled="TotalRows <= pageSize || pageIndex==0"><span><<</span></button>
                                <button type="button" class="btn btn-primary btn-sm" ng-click="lb.PagePrevious()" ng-disabled="TotalRows <= pageSize || pageIndex==0"><span><</span></button>
                                <button type="button" class="btn btn-primary btn-sm" ng-click="lb.PageNext()" ng-disabled="TotalRows <= pageSize || totalPages==pageIndex+1"><span>></span></button>
                                <button type="button" class="btn btn-primary btn-sm" ng-click="lb.PageLast()" ng-disabled="TotalRows <= pageSize || totalPages==pageIndex+1"><span>>></span></button>
                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

    </div>
</div>

